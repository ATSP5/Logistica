<Window x:Class="Logistica.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Logistica"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <DockPanel>
            <Menu DockPanel.Dock="Top" HorizontalAlignment="Left" Height="20" VerticalAlignment="Top" Width="10000">
                <MenuItem Header="File">
                    <MenuItem Header="Exit" Name="mIExit" Click="mIExit_Click"/>
                </MenuItem>
                <MenuItem Header="Connection" Name="mIConnection">
                    <MenuItem Header="Connect" Name="mIConnect" Click="mIConnect_Click"/>
                </MenuItem>
            </Menu>
            <DataGrid DockPanel.Dock="Bottom" Name="PokazTuDane"></DataGrid>
        </DockPanel>
        

    </Grid>
</Window>
