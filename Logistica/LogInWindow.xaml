<Window x:Class="Logistica.LogInWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Logistica"
        mc:Ignorable="d"
        Title="LogInWindow" Height="250" Width="300">
    <Grid Background="#FF7C7C7C">
        <StackPanel Margin="20,20,20,20">
            <ComboBox HorizontalAlignment="Center" VerticalAlignment="Top" Width="120" Name="cBLoginMethod" SelectionChanged="cBLoginMethod_SelectionChanged">
                <ComboBoxItem Content="Login By" IsSelected="True" IsEnabled="False"/>
                <ComboBoxItem Content="Login"/>
                <ComboBoxItem Content="email"/>
            </ComboBox>
            <TextBox Margin="50,20,50,20" Name="tBLogin">Login</TextBox>
            <PasswordBox Margin="50,0,50,20" Name="pBPassword"></PasswordBox>
            <StackPanel Orientation="Horizontal">
                <Button Height="30" Margin="50,0,50,0" Name="bTLogInWindowCancel" Click="bTLogInWindowCancel_Click">Cancel</Button>
                <Button Height="30" Margin="20,0,50,0" Name="bTLogInWindowLogin" Click="bTLogInWindowLogin_Click">Login</Button>
            </StackPanel>
        </StackPanel>
       

    </Grid>
</Window>
